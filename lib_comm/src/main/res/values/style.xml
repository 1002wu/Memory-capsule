<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="common_custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@drawable/common_bg_ad_rectangle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <declare-styleable name="LineProgress">
        <attr name="progress_height" format="dimension" />
        <attr name="progress_bg_color" format="color" />
        <attr name="progress_color" format="color" />
        <attr name="progress_normal_color" format="color" />
        <attr name="progress_high_color" format="color" />
        <attr name="show_round" format="boolean" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Zql_theme_fullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="Zql_theme_background_floatinbuttonlable">
        <item name="android:background">@drawable/background_floatingbuttonlable</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Zql_theme_toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:windowTitleSize">18dp</item>
    </style>
    <style name="Zql_theme_OverflowMenuStyle">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/colorpopumenubackground</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">10dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">#FFFF</item>
    </style>
    <style name="Zql_theme_searchstyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
    <style name="Zql_theme_Transparent" parent="Theme.AppCompat.Light.NoActionBar"><!--透明主题，为了滑动返回设定-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>